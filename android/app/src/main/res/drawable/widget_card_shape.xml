<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Semi-transparent fill for card background (will be overridden by dynamic color from code) -->
    <solid android:color="#E8333333" />
    <!-- Subtle border to emphasize rounded corners -->
    <stroke android:width="1dp" android:color="#15000000" />
    <!-- Rounded corners - 16dp radius for cards -->
    <corners android:radius="16dp" />
</shape>
