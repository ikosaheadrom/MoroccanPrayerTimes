<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root_h"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_main_shape"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/widget_root_bg_h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/widget_container_h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <FrameLayout
            android:id="@+id/widget_header_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <ImageView
                android:id="@+id/widget_header_bg_h"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_location_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_date_time_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29/12/2025 • 12:00"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_refresh_button_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:text="⟳"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Refresh" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Row 1: Fajr, Sunrise, Duhr (chronological order) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/card_fajr_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_fajr_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_fajr_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fajr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_fajr_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/card_sunrise_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_sunrise_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_sunrise_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunrise"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_sunrise_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/card_dhuhr_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_dhuhr_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_dhuhr_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dhuhr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_dhuhr_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- Row 2: Asr, Maghrib, Isha (chronological order) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/card_asr_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_asr_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_asr_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_asr_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/card_maghrib_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_maghrib_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_maghrib_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_maghrib_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/card_isha_frame_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_isha_bg_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_isha_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Isha"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_isha_time_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
