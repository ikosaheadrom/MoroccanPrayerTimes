<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_main_shape"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/widget_root_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <FrameLayout
            android:id="@+id/widget_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <ImageView
                android:id="@+id/widget_header_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29/12/2025 • 12:00"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_refresh_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:text="⟳"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Refresh" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Column 1: Fajr, Sunrise, Duhr -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Fajr -->
                <FrameLayout
                    android:id="@+id/card_fajr_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_fajr_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_fajr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fajr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_fajr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Sunrise -->
                <FrameLayout
                    android:id="@+id/card_sunrise_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_sunrise_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunrise"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_sunrise_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Duhr -->
                <FrameLayout
                    android:id="@+id/card_dhuhr_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_dhuhr_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_dhuhr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dhuhr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_dhuhr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- Column 2: Asr, Maghrib, Isha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Asr -->
                <FrameLayout
                    android:id="@+id/card_asr_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_asr_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_asr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asr"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_asr_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Maghrib -->
                <FrameLayout
                    android:id="@+id/card_maghrib_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_maghrib_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_maghrib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maghrib"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_maghrib_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Isha -->
                <FrameLayout
                    android:id="@+id/card_isha_frame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/card_isha_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_isha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Isha"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/prayer_isha_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
